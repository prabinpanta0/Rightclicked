{
    "manifest_version": 3,
    "name": "Rightclicked",
    "version": "1.0.0",
    "description": "Save LinkedIn posts in one click",
    "permissions": ["activeTab", "contextMenus", "storage"],
    "host_permissions": ["https://www.linkedin.com/*", "http://localhost:3001/*", "http://localhost:5173/*"],
    "author": "prabinpanta0",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
